<?xml version='1.0'?>
<config
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='urn:magento:module:Magento_Store:etc/config.xsd'
>
    <default>
		<df_payment>
			<mercado_pago>
				<actionForNew>authorize_capture</actionForNew>
				<actionForReturned>authorize_capture</actionForReturned>
				<requireBillingAddress>1</requireBillingAddress>
				<currency>order</currency>
				<description>{order.id}</description>
				<title>Bank Card</title>
				<title_backend>MercadoPago</title_backend>
			</mercado_pago>
		</df_payment>
        <payment>
            <dfe_mercado_pago>
				<model>Dfe\MercadoPago\Method</model>
            </dfe_mercado_pago>
        </payment>
    </default>
</config>